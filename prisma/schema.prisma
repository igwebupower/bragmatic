generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model CreatorApplication {
  id         String    @id @default(cuid())
  name       String
  email      String
  portfolio  String?
  niches     String?
  message    String?
  status     String    @default("pending")
  notes      String?
  reviewedAt DateTime?
  createdAt  DateTime  @default(now())
}

model BrandEnquiry {
  id         String    @id @default(cuid())
  company    String
  contact    String
  email      String
  jobTitle   String?
  industry   String?
  message    String?
  status     String    @default("new")
  notes      String?
  reviewedAt DateTime?
  createdAt  DateTime  @default(now())
}

model ContactMessage {
  id         String    @id @default(cuid())
  name       String?
  email      String
  type       String
  message    String?
  status     String    @default("unread")
  notes      String?
  reviewedAt DateTime?
  createdAt  DateTime  @default(now())
}

model AcademyWaitlist {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  status    String   @default("waiting")
  notes     String?
  createdAt DateTime @default(now())
}
